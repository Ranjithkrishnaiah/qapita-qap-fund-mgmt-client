{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "outDir": "./dist/esm",
    "types": ["webpack-env"],
    "declaration": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "lib": ["es2018", "dom"],
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
